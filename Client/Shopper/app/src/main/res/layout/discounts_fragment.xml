<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s_mart_background">

    <TextView
        android:id="@+id/discounts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discounts_fragment_header"
        android:textColor="@color/s_mart_text_color"
        style="@style/header"/>

    <ListView
        android:id="@+id/discounts_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discounts_title"/>

</RelativeLayout>