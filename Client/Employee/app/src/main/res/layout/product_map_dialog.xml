<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/round_frame_product_dialog">

    <RelativeLayout
        android:id="@+id/product_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/product_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_image_layout"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/s_mart_text_color"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/product_unit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/s_mart_text_color"
            android:textSize="20sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/s_mart_text_color"
        android:layout_below="@id/product_description_layout"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"/>
</RelativeLayout>